{% extends 'security/index.html.twig' %}
{% block body %}
    <section class="jumbotron jumbotron-fluid text-center">
         <h4>Problème de connexion</h4>
        <hr>
        <p class="lead text-white">Mot de passe oublié</p>
    </section>

    <div class="container reActivation">
        {% for message in app.flashes('danger') %}
            <div class="row d-flex justify-content-center">
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="row d-flex justify-content-center">
                <div class="alert alert-success">
                    {{ message }}
                </div>
            </div>
        {% endfor %}

           <div class="form-signin">
            {{ form_start(formReset) }}
            <h6 class="mb-4 font-weight-normal text-center lead text-white">Adresse e-mail</h6>
            {{ form_row(formReset.email) }}
            <div class="row  d-flex justify-content-around">
                <button class="btn btn-md btn-dark btn_block" type="submit">envoyer</button>
                <a class="btn btn-outline-light btn-md" href="{{ path('app_login') }}">Retour</a>
            </div>
            {{ form_end(formReset) }}
        </div>
    </div>

{% endblock %}