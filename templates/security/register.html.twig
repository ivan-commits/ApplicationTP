{% extends 'security/index.html.twig' %}
{% block body %}
    <section id="header" class="jumbotron jumbotron-fluid text-center">
        <img src="{{ asset('images/logo/TerrePlurielle.png') }}" class="d-inline-block align-top" alt="">
    </section>


   <section class="container connexion">

        <div class="form-signin">
           <div class="title-content">
                <h1>Inscription</h1>
                <hr>
            </div>
            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.firstName , {'attr':{'placeholder':'Pr√©nom'}}) }}
            {{ form_row(registrationForm.surname,{'attr':{'placeholder':'Nom'}}) }}
            {{ form_row(registrationForm.email, {'attr':{'placeholder':'Adresse e-mail'}}) }}
            {{ form_row(registrationForm.password, {'attr':{'placeholder':'Mot de passe'}}) }}
            {{ form_row(registrationForm.confirm_password, {'attr':{'placeholder':'Confirmation mot de passe'}}) }}
            <div class="btn-secu">
                <button class="btn btn-md" type="submit">Valider</button>
                <a class="btn btn-md" href="{{ path('app_login') }}">Retour</a>
            </div>
            {{ form_end(registrationForm) }}
        </div>


    </section>
{% endblock %}