{% extends 'security/index.html.twig' %}
{% block body %}
    <section class="jumbotron jumbotron-fluid text-center">
        <h4>Probl√®me de connexion</h4>
        <hr>
        <p class="lead text-white">Renvoyer un mail pour activer mon compte</p>
    </section>

    <section class="container reActivation">
        {% for message in app.flashes('danger') %}
                <div class="row d-flex justify-content-center">
                    <div class="alert alert-danger">
                        {{ message }}
                    </div>
                </div>
        {% endfor %}

        <div class="form-signin">
            {{ form_start(formToken) }}
            <h6 class="mb-4 font-weight-normal text-center text-white lead">Activer mon compte</h6>
  
            {{ form_row(formToken.email) }}
            <div class="row  d-flex justify-content-around">
                <button class="btn btn-md btn-dark btn_block" type="submit">envoyer</button>
                <a class="btn btn-outline-light btn-md" href="{{ path('app_login') }}">Retour</a>
            </div>
            {{ form_end(formToken) }}
        </div>

    </section>


{% endblock %}