{% extends 'base.html.twig' %}

{% block title %}Mon Profile{% endblock %}

{% block body %}

    <section id="header" class="jumbotron jumbotron-fluid text-center">
        <img src="{{ asset('images/logo/TerrePlurielle.png') }}" class="d-inline-block align-top" alt="">
    </section>


    <section class="container app account">
{% if is_granted('ROLE_USER') %}
        <div class="container-content">

            <div class="title-content">
                <h1>Profile utilisateur</h1>
                <a href="{{ path('app_edit_account')}}"><i class="far fa-edit"></i></a>  
                <hr>
            </div>
                    

            <div class="block-profile">
                <h5>Nom: </h5>
                <p>{{ app.user.firstName }}</p>
            </div>

            <div class="block-profile">
                <h5>Prénom: </h5>
                <p>{{ app.user.surname }}</p>
            </div>

            <div class="block-profile"> 
                <h5>Date de naissance: </h5>   
                <p> {{ app.user.getDateDeNaissance() | date("m/d/Y")}} </p>

            </div>

            <div class="block-profile">
                <h5>Parents: </h5>
                {% if app.user.getFirstNameParent1 and app.user.getSurnameParent1 %}
                <p>{{ app.user.getFirstNameParent1 }} {{ app.user.getSurnameParent1 }}</p>
                {% else %}
                <p>Parent 1 - non renseigné et </p>
                {% endif %}
                {% if app.user.getFirstNameParent2 and app.user.getSurnameParent2 %}
                <p>{{ app.user.getFirstNameParent2 }} {{ app.user.getSurnameParent2 }}</p>
                {% else %}
                    <p>Parent 2 - non renseigné</p>
                {% endif %}
            </div>
            
            <div class="block-profile">
                <h5>Professionnels: </h5>
                {% if app.user.getFirstnameEducateur and app.user.getSurnameEducateur %}
                <p>{{ app.user.getFirstnameEducateur }} {{ app.user.getSurnameEducateur }} - Éducateur</p>
                {% else %}
                <p>Éducateur - non renseigné et</p>
                {% endif %}
                {% if app.user.getFirstnameOrthophoniste and app.user.getSurnameOrthophoniste %}
                <p>{{ app.user.getFirstnameOrthophoniste }} {{ app.user.getSurnameOrthophoniste }} - Orthophoniste</p>
                {% else %}
                    <p>Orthophoniste - non renseigné</p>
                {% endif %}
            </div>


               
            
        </div>
{% endif %}      

    </section>



{% endblock %}